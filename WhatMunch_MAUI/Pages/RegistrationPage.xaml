<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:WhatMunch_MAUI.ViewModels"
             x:Class="WhatMunch_MAUI.Pages.RegistrationPage"
             Title="RegistrationPage"
             x:DataType="viewmodel:RegistrationViewModel">
    <Grid RowDefinitions=".3*, .7*">
        <Label  Text="Register for WhatMunch"
                FontSize="Large"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Grid.Row="0"/>
        <VerticalStackLayout Margin="30,0,30,0"
                             Grid.Row="1"
                             WidthRequest="250"
                             Spacing="20">
            <Entry Placeholder="Username"
                   VerticalOptions="Center"
                   ClearButtonVisibility="WhileEditing"/>
			<Entry Placeholder="Password"
				   VerticalOptions="Center"
				   ClearButtonVisibility="WhileEditing"
				   IsPassword="True" />
            <Entry 
            Placeholder="Confirm Password"
            VerticalOptions="Center"
            ClearButtonVisibility="WhileEditing"
            IsPassword="True" />



            <Button Margin="0,30,0,0"
                    HeightRequest="60"
                    Text="Submit"
                    Command="{Binding GoToLoginPageCommand}" />
            <Button Margin="0,30,0,0"
                    HeightRequest="60"
                    Text="Login"
                    Command="{Binding GoToLoginPageCommand}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>