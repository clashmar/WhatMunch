<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:WhatMunch_MAUI.ViewModels"
             xmlns:model="clr-namespace:WhatMunch_MAUI.Models"
             xmlns:strings="clr-namespace:WhatMunch_MAUI.Resources.Localization"
             xmlns:fasolid="clr-namespace:WhatMunch_MAUI.Models.Fonts"
             xmlns:controls="clr-namespace:WhatMunch_MAUI.Views.Controls"
             x:Class="WhatMunch_MAUI.Views.PlaceDetailsPage"
             Title="{Binding Title}"
             x:DataType="viewmodel:PlaceDetailsViewModel">
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto"
              RowSpacing="10">

            <Grid Grid.Row="0">
                <CarouselView ItemsSource="{Binding Place.Photos}"
                              IndicatorView="indicatorView"
                              WidthRequest="400"
                              HeightRequest="250">
                    <CarouselView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Border>
                                <Image Source="{Binding .}"
                                       Aspect="AspectFill"/>
                            </Border>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                <!--<Image Source="{Binding Place.MainPhoto}"
                       Aspect="AspectFit" />-->
                <BoxView VerticalOptions="End"
                         HeightRequest="80"
                         InputTransparent="True">
                    <BoxView.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#00000000"
                                          Offset="0.0" />
                            <GradientStop Color="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
                                          Offset="1.0" />
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>
            </Grid>

            <IndicatorView Grid.Row="1" x:Name="indicatorView"
                            IndicatorColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray100}}"
                            SelectedIndicatorColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource White}}"
                            IndicatorSize="10"
                            HorizontalOptions="Center"/>
            <FlexLayout Grid.Row="2"
                        BindableLayout.ItemsSource="{Binding Place.Types}"
                        Direction="Row"
                        Wrap="Wrap"
                        JustifyContent="Center"
                        AlignItems="Center"
                        Margin="10">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border Style="{StaticResource Attribute}">
                            <Label Text="{Binding .}" 
                                   FontSize="14"/>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
            <Grid Grid.Row="3"
                  ColumnDefinitions="*,*">
                <VerticalStackLayout Spacing="5"
                                     Grid.Column="0"
                                     Grid.ColumnSpan="2">
                        <Label Text="{Binding Place.RatingSummary}"
                               FontSize="20"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding Place.Stars}"
                               Style="{StaticResource Stars}"
                               FontFamily="FaSolid"
                               FontSize="20"
                               HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>
            <FlexLayout Grid.Row="4"
                        Direction="Row"
                        Wrap="Wrap"
                        JustifyContent="Center"
                        AlignItems="Center"
                        Margin="4">
                <controls:IconLabelView Icon="{x:Static fasolid:FaSolid.Dog}"
                                        Text="{x:Static strings:AppResources.DogFriendly}" />
                <controls:IconLabelView Icon="{x:Static fasolid:FaSolid.Child}"
                                        Text="{x:Static strings:AppResources.ChildFriendly}" />
            </FlexLayout>
        </Grid>
    </ScrollView>
</ContentPage>