<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WhatMunch_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WhatMunch_MAUI"
    xmlns:views="clr-namespace:WhatMunch_MAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="WhatMunch">

    <TabBar>
        <ShellContent
            Title="Start"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent Title="Profile"
                      Icon="person.png"
                      Route="ProfilePage"
                      ContentTemplate="{DataTemplate views:SearchPreferencesPage}" />

        <ShellContent Title="Search"
                      Icon="search.png"
                      Route="SearchPage"
                      ContentTemplate="{DataTemplate views:SearchPage}" />
    </TabBar>
</Shell>
